{
  "name": "typescript-starter",
  "version": "0.0.1",
  "main": "dist/cloud-functions/index.js",
  "repository": "git@github.com:valora-inc/typescript-starter.git",
  "author": "Valora Inc",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "build": "tsc",
    "gcp-build": "yarn build",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint --ext=.tsx,.ts,.json scripts/ test/",
    "eslint:fix": "yarn eslint --fix",
    "solhint": "solhint --max-warnings=0 contracts/**/*.sol",
    "solhint:fix": "yarn solhint --fix --noPrompt",
    "lint": "yarn eslint && yarn solhint",
    "lint:fix": "yarn eslint:fix && yarn solhint:fix",
    "format": "prettier --log-level error --write .",
    "format:check": "prettier --check .",
    "test": "hardhat test && jest --silent",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --ci --coverage",
    "supercheck": "yarn format && yarn lint:fix && yarn typecheck && yarn knip && yarn test",
    "example": "ts-node ./scripts/example.ts",
    "knip": "knip",
    "compile": "hardhat compile",
    "docs": "typedoc",
    "dget": "ts-node ./scripts/dget.ts",
    "dev": "sh -c 'tsc-watch --noClear --onSuccess \"functions-framework --target=${0} --signature-type=http --port=${1}\"'",
    "start": "sh -c 'yarn build && functions-framework --target=${0} --signature-type=http --port=${1}'",
    "deploy:production:base": "gcloud functions deploy --project=divvi-production --region=us-central1 --gen2 --cpu=1 --memory=256MB --runtime=nodejs22 --trigger-http --run-service-account=protocol-functions@divvi-production.iam.gserviceaccount.com --update-labels=divvi-repo=divvi-protocol-v0,commit-sha=$(git rev-parse HEAD)",
    "deploy:staging:base": "gcloud functions deploy --project=divvi-staging --region=us-central1 --gen2 --cpu=1 --memory=256MB --runtime=nodejs22 --trigger-http --run-service-account=protocol-functions@divvi-staging.iam.gserviceaccount.com --update-labels=divvi-repo=divvi-protocol-v0,commit-sha=$(git rev-parse HEAD)",
    "deploy:production": "yarn deploy:production:base --concurrency=80 --allow-unauthenticated --ingress-settings=internal-and-gclb",
    "deploy:staging": "yarn deploy:staging:base --concurrency=80  --allow-unauthenticated --ingress-settings=internal-and-gclb",
    "deploy:production:internal-single": "yarn deploy:production:base --concurrency=1 --max-instances=1 --ingress-settings=internal-only",
    "deploy:staging:internal-single": "yarn deploy:staging:base --concurrency=1 --max-instances=1 --ingress-settings=internal-only"
  },
  "dependencies": {
    "@envio-dev/hypersync-client": "^0.6.5",
    "@github/memoize": "^1.1.5",
    "@redis/client": "^5.5.6",
    "@valora/http-handler": "^0.0.1",
    "@valora/logging": "^1.3.18",
    "axios": "^1.10.0",
    "dotenv": "^17.0.0",
    "redis": "^5.5.6",
    "viem": "^2.31.4",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@bgd-labs/aave-address-book": "^4.18.0",
    "@google-cloud/functions-framework": "^3.4.3",
    "@google-cloud/storage": "^7.16.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.10",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.10",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@openzeppelin/contracts": "5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node-fetch": "^2.6.12",
    "@types/sax": "^1.2.7",
    "@types/supertest": "^6.0.3",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@valora/prettier-config": "^0.0.1",
    "axios": "^1.10.0",
    "bignumber.js": "^9.2.1",
    "bottleneck": "^2.19.5",
    "chai": "^4.5.0",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "ethers": "^6.13.5",
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.2",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^2.2.2",
    "jest": "^30.0.0",
    "knip": "^5.46.2",
    "nock": "^14.0.2",
    "prettier": "^3.6.1",
    "prettier-plugin-solidity": "^1.4.3",
    "sax": "^1.4.1",
    "solhint": "^5.0.5",
    "solidity-coverage": "^0.8.14",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.8.3",
    "unzipper": "^0.12.3",
    "yargs": "^17.7.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
